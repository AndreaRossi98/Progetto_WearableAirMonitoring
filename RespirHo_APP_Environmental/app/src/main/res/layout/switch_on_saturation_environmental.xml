<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoDownload">

    <!-- SENSOR -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layoutroundedcornerssensor"
        android:rowCount="8"
        android:columnCount="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- SENSOR DATA NAME -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:text="Saturation + Environmental Monitor"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:text="Switch on manually the sensors in the following order: "
            android:textAlignment="center"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"/>

        <!-- SWITCH ON SENSOR 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/switchonpulseox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Switch on Pulse Oximeter:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/pulseox_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/pulseox_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:tint="#53FB5A"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_checkmark_icon" />
        </RelativeLayout>

        <!-- SWITCH ON SENSOR 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/switchonenvironmental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Switch on Environmnetal Monitor:"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/switchonenvironmental_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/switchonenvironmental_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:background="#00FFFFFF"
                android:clickable="true"
                android:tint="#53FB5A"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_checkmark_icon" />
        </RelativeLayout>

        <Button
            android:id="@+id/gotorecordingbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to select recording"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_row="6"
            android:layout_column="0"
            android:visibility="gone"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>