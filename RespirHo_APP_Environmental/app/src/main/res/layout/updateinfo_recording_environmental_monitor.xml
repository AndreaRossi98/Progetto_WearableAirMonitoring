<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoDownload">

    <!-- SENSOR -->
    <LinearLayout
        android:id="@+id/displayed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layoutroundedcornerssensor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- DISPLAYED DATA -->
        <GridLayout
            android:id="@+id/displayed_data"
            android:layout_width="wrap_content"
            android:layout_height="366dp"
            android:layout_below="@+id/infotelephonedownload"
            android:layout_margin="15dp"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infotelephonedownload">

            <!-- TEMPERATURE -->
            <TextView
                android:id="@+id/temperature"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Temperature [Â°C]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- HUMIDITY -->
            <TextView
                android:id="@+id/humididty"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Humidity [%]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- TEMPERATURE VALUE -->
            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <!-- HUMIDITY VALUE -->
            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="20sp" />

            <!-- CO2 -->
            <TextView
                android:id="@+id/CO2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="CO2 [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- VOC -->
            <TextView
                android:id="@+id/VOC"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="VOC [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- CO2 VALUE -->
            <TextView
                android:id="@+id/CO2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="20sp" />
            
            <!-- VOC VALUE -->
            <TextView
                android:id="@+id/VOC_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <!-- NO2 -->
            <TextView
                android:id="@+id/NO2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="NO2 [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- CO -->
            <TextView
                android:id="@+id/CO"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="CO [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- NO2 VALUE -->
            <TextView
                android:id="@+id/NO2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="20sp" />

            <!-- CO VALUE -->
            <TextView
                android:id="@+id/CO_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <!-- PM1.0 -->
            <TextView
                android:id="@+id/PM1.0"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="PM1.0 [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PM2.5 -->
            <TextView
                android:id="@+id/PM2.5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="PM2.5 [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PM1.0 VALUE -->
            <TextView
                android:id="@+id/PM1.0_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="20sp" />

            <!-- PM2.5 VALUE -->
            <TextView
                android:id="@+id/PM2.5_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textSize="20sp" />

            <!-- PM10 -->
            <TextView
                android:id="@+id/PM10"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="PM10 [ppm]"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- AIR QUALITY -->
            <TextView
                android:id="@+id/indexquality"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="Air quality"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PM10 VALUE -->
            <TextView
                android:id="@+id/PM10_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="35"
                android:textAlignment="center"
                android:textSize="20sp"
                android:translationY="-18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="20sp" />

            <!-- AIR QUALITY SQUARE -->
            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_row="9"
                android:layout_column="2"
                android:background="#06670A"
                android:text=""
                android:translationX="40dp" />

        </GridLayout>

    </LinearLayout>

    <!-- SENSOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayed"
        android:layout_margin="10dp"
        android:background="@drawable/layoutroundedcornerssensor"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayed">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="0dp"
            android:text="Update info recording"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <!-- ADD RECORDING INFO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_insert_addinforec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Add recording info (optional)"
            android:textColorHint="@android:color/white"
            android:visibility="visible"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:counterTextColor="@android:color/white"
            app:helperTextTextAppearance="@style/HelperTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/insert_addinforec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:maxLines="3"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Press the bottom below to update info recording"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/updateinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:enabled="true"
            android:text="update info" />

        <!-- INFO RECORDING TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:text="Info recording:"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <!-- INFO RECORDING -->
        <TextView
            android:id="@+id/inforecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:textColor="@android:color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>