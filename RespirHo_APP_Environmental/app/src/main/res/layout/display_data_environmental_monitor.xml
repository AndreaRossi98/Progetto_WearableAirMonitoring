<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoDownload">

    <!-- SENSOR -->
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/layoutroundedcornerssensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- DISPLAYED DATA -->
        <GridLayout
            android:id="@+id/displayed_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infotelephonedownload"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infotelephonedownload">

            <!-- TEMPERATURE -->
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Temperature [°C]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- HUMIDITY -->
            <TextView
                android:id="@+id/humididty"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Humidity [%]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- TEMPERATURE VALUE -->
            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <!-- HUMIDITY VALUE -->
            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="30sp" />

            <!-- PRESSURE -->
            <TextView
                android:id="@+id/pressure"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="Pressure [Pa]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- VOC -->
            <TextView
                android:id="@+id/VOC"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="VOC [ppm]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PRESSURE VALUE -->
            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="30sp" />

            <!-- VOC VALUE -->
            <TextView
                android:id="@+id/VOC_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <!-- CO2 -->
            <TextView
                android:id="@+id/CO2"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="CO2 [ppm]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- CO -->
            <TextView
                android:id="@+id/CO"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="CO [ppm]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- CO2 VALUE -->
            <TextView
                android:id="@+id/CO2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="30sp" />

            <!-- CO VALUE -->
            <TextView
                android:id="@+id/CO_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <!-- NO2 -->
            <TextView
                android:id="@+id/NO2"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="NO2 [ppm]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PM1.0 -->
            <TextView
                android:id="@+id/PM1.0"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="PM1.0 [μg/m³]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- NO2 VALUE -->
            <TextView
                android:id="@+id/NO2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="30sp" />

            <!-- PM1.0 VALUE -->
            <TextView
                android:id="@+id/PM1.0_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />

            <!-- PM2.5 -->
            <TextView
                android:id="@+id/PM2.5"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="PM2.5 [μg/m³]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!-- PM10 -->
            <TextView
                android:id="@+id/PM10"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:paddingTop="5dp"
                android:text="PM10 [μg/m³]"
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PM2.5_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:paddingTop="5dp"
                android:text=""
                android:textSize="30sp" />

            <!-- PM10 VALUE -->
            <TextView
                android:id="@+id/PM10_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#25383C"
                android:textSize="22sp" />


        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>