<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#DCE6F2"
        android:clickable="false"
        android:visibility="visible"
        tools:context=".EnvironmentalMonitor">

        <!-- TOOLBAR -->
        <include
            layout="@layout/toolbar"
            android:id="@+id/layout_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </include>

        <!-- ID PATIENT -->
        <RelativeLayout
            android:id="@+id/idpatient"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_below="@+id/layout_toolbar"
            android:layout_above="@+id/infomaildownload"
            android:background="@drawable/layoutroundedcorners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar">

            <TextView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="1234567890"/>

            <!-- LOW BATTERY -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="105dp">

                <ImageView
                    android:id="@+id/lowbattery_idpatient"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:clickable="true"
                    android:visibility="visible"
                    app:srcCompat="@drawable/low_battery" />
            </RelativeLayout>

            <!-- WARNINGS -->
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="45dp">

                <ImageButton
                    android:id="@+id/error_idpatient"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:tint="#FF0000"
                    android:clickable="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_cancel_foreground" />

                <ImageButton
                    android:id="@+id/exclamation_point_idpatient"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:clickable="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:tint="#FFEB3B"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_exclamation_point_round_foreground" />

                <ImageButton
                    android:id="@+id/checkmark_idpatient"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="#00FFFFFF"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:tint="#53FB5A"
                    android:clickable="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_checkmark_foreground" />
            </RelativeLayout>

            <!-- PROGRESS BAR DISCONNECTION -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp">

                <ProgressBar
                    android:id="@+id/progressbar_idpatient"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- INFO AND TELEPHONE DOWNLOAD-->
        <GridLayout
            android:id="@+id/infotelephonedownload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/idpatient"
            android:layout_above="@+id/displayed_data"
            android:layout_margin="15dp"
            android:columnCount="2"
            android:rowCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idpatient">

            <include
                layout="@layout/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginRight="130dp"></include>

            <include
                layout="@layout/telephone_storage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="end"></include>
        </GridLayout>

        <!-- DISPLAYED DATA -->
        <GridLayout
            android:id="@+id/displayed_data"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_below="@+id/infotelephonedownload"
            android:layout_margin="15dp"
            android:columnCount="3"
            android:rowCount="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infotelephonedownload">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Temperature [Â°C]"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humididty"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Humidity [%]"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temperature_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/humidity_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/CO2"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="CO2 [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/VOC"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:text="VOC [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/CO2_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="35"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/VOC_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/NO2"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="NO2 [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/CO"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:text="CO [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/NO2_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CO_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/PM1.0"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="PM1.0 [ppm]"
                android:textStyle="bold"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/PM2.5"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:text="PM2.5 [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/PM1.0_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="35"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/PM2.5_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/PM10"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="PM10 [ppm]"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/indexquality"
                android:paddingTop="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:text="Air quality"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/PM10_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/indexquality_value"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="2"
                android:layout_centerInParent="true"
                android:text="35"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_centerInParent="true"
                android:text="  "
                android:textSize="20sp"/>


        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- DRAWER -->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/main_drawer" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>